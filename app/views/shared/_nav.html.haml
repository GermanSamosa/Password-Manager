= turbo_frame_tag :nav, target: "application_content" do
  %nav.flex.justify-between
    %div.flex.items-center.gap-2
      = link_to "Password Manager", root_path , class: "text-xl font-bold no-underline text-text-950"
      %ul.list-none.flex.gap-2
        %li 
          = link_to root_path, class: "no-underline text-accent-600 hover:text-accent-700", data: { turbo: false } do
            %svg.w-5.h-5{fill: "none", stroke: "currentColor", "stroke-width" => "1.5", viewbox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
              %path{d: "M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
    %ul.list-none.flex.items-center.gap-2
      - if user_signed_in?
        %li 
          = link_to "Profile", edit_user_registration_path, class: "no-underline text-accent-600 hover:text-accent-700", data: { turbo: false }
        %li 
          = button_to "Logout", destroy_user_session_path, method: :delete, class: "no-underline font-semibold text-danger-400 hover:text-danger-600", data: { turbo_frame: :_top }
      - else 
        %li 
          = link_to "Login", new_user_session_path, class: "no-underline text-accent-600 hover:text-accent-700", data: { turbo: false }
        %li 
          = button_to "Sign up", new_user_registration_path, class: "no-underline text-accent-600 font-semibold hover:text-accent-700", data: { turbo: false }